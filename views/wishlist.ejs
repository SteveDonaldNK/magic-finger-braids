        <meta name="twitter:image" content="https://www.magic-finger-braids.com/assets/magic-logo-footer.webp">
        <meta property="og:url" content="https://www.magic-finger-braids.com/shop">
        <meta property="og:type" content="website">
        <meta property="og:title" content="Magic Finger Braids - Premier Hair Salon">
        <meta property="og:description" content="Explore our products, magic finger braids offer a variety braid styles. Book and enjoy your beauty">
        <meta property="og:image" content="https://www.magic-finger-braids.com/assets/magic-logo-footer.webp">
        <link rel="stylesheet" href="css/navigation.min.css">
        <link rel="stylesheet" href="css/shop.min.css">
        <link rel="stylesheet" href="css/footer.min.css">
        <title><%= pageTitle%></title>
    </head>
    <body>

<%- include("./partials/NavigationBar/navigation-bar") %>



<section class="product-section">
    <h1 class="text-center heading"><%= pageTitle %></h1>
    <div class="category-bar w-100 bg-dark h-25"></div>
    <div class="container-fluid">
        <div class="d-flex top-bar pt-4 pb-3 justify-content-between align-items-center">
            <!-- Breadcrumb -->
            <ol class="breadcrumb m-0">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/shop">Shop</a></li>
                <li class="breadcrumb-item"><a href="/<%= pageLink %>"><%= pageTitle %></a></li>
            </ol>
        </div>
      </div> 

      <div  class="container-fluid product-container">
        <div style="height: 50vh;" class="d-flex justify-content-center align-items-center">
            <div style="height: 4rem; width: 4rem;" class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
      </div>
</section>

<div class="drawer">
    <div class="drawer-header text-center py-3">
        <button type="button" class="btn-close drawer-closer m-auto" aria-label="Close"></button>
    </div>
    <div class="drawer-body">
        <div class="spinner-container position-absolute">
            <div class="spinner-border" style="width: 4rem; height: 4rem;" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
        <div class="row product-data d-none">
            <div class="image-col col col-12 col-lg-6 col-sm-6">
                <img loading="lazy" class="quickview-img" src="" alt="product">
            </div>
            <div class="col col-12 col-lg-6 col-sm-6">
                <h2 class="item-title"></h2>
                <h4 class="mt-3 item-price"></h4>
                <h6 class="my-3">Choose Style</h6>
                <div id="options" class="hstack w-100 flex-wrap gap-3 mt-2">
                    
                </div>
                <div class="text-danger mt-2" id="option-error"></div>
                <div class="hstack flex-wrap mt-4">
                    <div class="option-price">
                        <p class="text-secondary">Price: <span id="price"></span></p>
                    </div>
                    <button type="button" id="id" value="" class="btn add-to-cart ms-auto px-4 py-2 bg-dark rounded-0 text-light" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="option 1">
                        Book
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<hr>

<div class="overlay"></div>

<script src="/js/shop.min.js"></script>
<script src="/js/favorites.min.js"></script>

<%- include("./partials/footer") %>