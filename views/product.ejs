<%- include("partials/header") %>
<link rel="stylesheet" href="/css/navigation.css">
<link rel="stylesheet" href="/css/shop.css">
<link rel="stylesheet" href="/css/footer.css">
<link rel="stylesheet" href="/css/product.css">
<title>Products</title>
</head>
<body>

<%- include("partials/NavigationBar/navigation-bar") %>

<section id="product-section">
    <div class="product-header py-3">
        <ol class="breadcrumb m-0">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/shop">Shop</a></li>
            <li class="breadcrumb-item"><a href="/shop/<%= product._id %>"><%= product.name %></a></li>
        </ol>
    </div>
    <div class="product-body mt-3">
        <div class="row">
            <div class="image-col col col-12 col-lg-6 col-sm-6 mb-5">
                <img class="quickview-img" src="/<%= product.image %>" alt="<%= product.name %>">
            </div>
            <div class="col col-12 col-lg-6 col-sm-6">
                <h2 class="item-title"><%= product.name %></h2>
                <h4 class="mt-3 item-price">$<%= product.min %> - $<%= product.max %></h4>
                <h6 class="my-3">Choose Style</h6>
                <div id="options" class="hstack w-75 flex-wrap gap-3 justify-content-between mt-2">
                    <% product.options.forEach(element => { %>
                        <button class="btn btn-outline-dark rounded-0"><%= element.name %></button>
                    <% }); %>
                </div>
                <div class="text-danger" id=""></div>
                <div class="hstack w-75 flex-wrap mt-5">
                    <div class="option-price">
                        <p class="text-secondary">Price: <span id="price"></span></p>
                    </div>
                    <button type="button" id="id" value="" class="btn add-to-cart ms-auto px-4 py-2 bg-dark rounded-0 text-light" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="option 1">
                        Book
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<hr>

<%- include("partials/footer") %>
